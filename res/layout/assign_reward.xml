		android:id="@+id/name_table" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="5px">	
		
		<TableRow>
			<TextView 
				android:id="@+id/name" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:layout_marginLeft="10px"
				android:textColor="#000000" 
